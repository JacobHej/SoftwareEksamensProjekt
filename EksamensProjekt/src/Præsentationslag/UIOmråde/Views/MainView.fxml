                        <Insets top="10.0" />
                     </VBox.margin>
                  </Button>
                  <TextField fx:id="AddProjectName" promptText="Project name">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </TextField>
                  <Button fx:id="AddProjectButton" mnemonicParsing="false" onAction="#addProject" text="Add Project" textAlignment="CENTER" />
