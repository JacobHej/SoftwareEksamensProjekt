                  <TextField fx:id="AddActivityName" promptText="Activity name">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </TextField>
                  <Button fx:id="AddActivityButton" mnemonicParsing="false" onAction="#addActivity" text="Add Activity" textAlignment="CENTER" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
